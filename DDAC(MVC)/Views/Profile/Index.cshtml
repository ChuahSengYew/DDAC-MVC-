@{
    ViewData["Title"] = "Profile";
}


<link rel="stylesheet" href="~/css/site.css" />
<div id="carouselExampleIndicators" class="carousel slide my-4 border-rad" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner border-rad">
        <div class="carousel-item active">
            <img class="d-block w-100" src="https://music-now-assets.s3.amazonaws.com/slide-1.png" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://music-now-assets.s3.amazonaws.com/slide-2.png" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://music-now-assets.s3.amazonaws.com/slide-3.png" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="flex-row">
    <h1 class="my-4">Account Overview</h1>
</div>
<div class="row my-4">
    <h4 class="my-3 profile-title">Profile</h4>
    <ul class="list-group list-group-flush col-12 user-info">
        <li class="row list-group-item user-detail">
            <span class="col-6 text-secondary">Full Name</span>
            <span class="col-6">Tahmid Rahman</span>
        </li>
        <li class="row list-group-item user-detail">
            <span class="col-6 text-secondary">Username</span>
            <span class="col-6">timid</span>
        </li>
        <li class="row list-group-item user-detail">
            <span class="col-6 text-secondary">Email</span>
            <span class="col-6">tahmidrahman.656@gmail.com</span>
        </li>
    </ul>
</div>


<script type="text/javascript" src="~/js/site.js"></script>
<script>
    async function getUserInfo() {
        let id = 1;
        let userApi = api + '/user/' + id;
        try {
            let userData = await fetch(userApi, { cache: "force-cache" });
            return await userData.json();
        } catch (error) {
            console.log(error)
        }
    }
    async function showUserInfo() {
        let userData = await getUserInfo();
        let container = document.querySelector('.user-info');
        container.innerHTML =
            `
                <li class="row list-group-item user-detail">
                    <span class="col-6 text-secondary">Full Name</span>
                    <span class="col-6">${userData.fullName}</span>
                </li>
                <li class="row list-group-item user-detail">
                    <span class="col-6 text-secondary">Username</span>
                    <span class="col-6">${userData.username}</span>
                </li>
                <li class="row list-group-item user-detail">
                    <span class="col-6 text-secondary">Email</span>
                    <span class="col-6">${userData.email}</span>
                </li>
            `
            ;
    }
    showUserInfo();
</script>
